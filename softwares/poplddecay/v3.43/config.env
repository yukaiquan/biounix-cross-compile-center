#!/bin/bash
# PopLDdecay v3.43 专属配置文件
# 个性化参数：与标准化工作流解耦，仅本软件/版本生效
# 被build-cross.yml和build.sh引用

# 1. 产物基础参数（与标准化流程对齐）
export OUTPUT_NAME="PopLDdecay"          # 原始产物名（无平台/架构后缀）
export ARTIFACT_NAME="poplddecay-v3.43"  # 标准化产物前缀（工作流拼接平台/架构）
export COMPILE_OPT="O3"                  # 编译优化级别
export DEPENDENCIES="gcc g++ make zlib"  # 本软件核心依赖（供install_deps.sh使用）

# 2. 跨平台编译个性化参数（build.sh专用）
export SRC_DIR="src"                     # 源码目录（相对源码根目录）
export MAIN_SRC="LD_Decay.cpp"           # 核心源文件（唯一）
export LIBS="-lz"                        # 链接库（仅zlib）
