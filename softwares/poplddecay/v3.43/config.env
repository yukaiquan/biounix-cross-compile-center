#!/bin/bash
# PopLDdecay v3.43 专属配置文件 - 对接通用脚本/CI，所有可变参数在此配置
# 遵循标准化配置规范，通用脚本自动读取

# ==================== 软件基础信息 ====================
export SOFT_NAME="poplddecay"
export SOFT_VERSION="v3.43"

# ==================== 源码拉取配置（SOURCE_*）====================
# 源码类型：git/zip/tar/tar.gz/tar.bz2
export SOURCE_TYPE="git"
# 源码地址（GitHub官方仓库）
export SOURCE_URL="https://github.com/BGI-shenzhen/PopLDdecay.git"
# Git切换标签/分支/提交ID（与官方版本一致）
export SOURCE_CHECKOUT="v3.43"

# ==================== 编译配置（COMPILE_*）====================
# 编译语言：c/c++/go/python
export COMPILE_LANG="c++"
# C++编译参数（优化+标准+其他）
export CXXFLAGS="-O2 -std=c++11"
# 链接参数（核心：-static 纯静态编译；-lz 链接zlib）
export LDFLAGS="-static -lz"
# 产物基础名称（无平台/架构后缀，通用脚本自动拼接）
export OUTPUT_NAME="PopLDdecay"

# ==================== 平台依赖配置（DEPS_*）====================
# 格式：包名用空格分隔，对应平台包管理器（Linux:apt | Windows:pacman | macOS:brew）
export DEPS_LINUX="gcc g++ make zlib1g-dev"
export DEPS_WINDOWS="mingw-w64-x86_64-gcc mingw-w64-x86_64-zlib make"
export DEPS_MACOS="gcc zlib make"

# ==================== 产物验证配置（VERIFY_*）====================
# 是否验证纯静态二进制（true/false）
export VERIFY_STATIC=true
# 是否验证产物运行性（true/false）
export VERIFY_RUN=true
