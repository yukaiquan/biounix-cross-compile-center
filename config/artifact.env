#!/bin/bash
# 产物配置 - 通用上传脚本自动加载
# 产物命名规范（{soft}=软件名, {ver}=版本号, {os}=系统, {arch}=架构, {suffix}=Windows后缀）
export ARTIFACT_NAME_PATTERN="{soft}-{ver}-{os}-{arch}{suffix}"

# GitHub Artifacts 配置
# 产物保留天数（最大90天，私有仓库可更长）
export ARTIFACT_RETENTION_DAYS=30
# 产物上传根路径（CI中使用，对应仓库根目录）
export ARTIFACT_UPLOAD_PATH="$PWD"

# 产物校验和（是否生成MD5/SHA256，true/false）
export GENERATE_CHECKSUM=true
# 校验和文件命名规范
export CHECKSUM_MD5_PATTERN="{artifact_name}.md5"
export CHECKSUM_SHA256_PATTERN="{artifact_name}.sha256"

# GitHub Release 配置（可选扩展，开启后产物上传至Release）
export UPLOAD_TO_RELEASE=false
# Release标签规范
export RELEASE_TAG_PATTERN="{soft}-{ver}"
# Release标题
export RELEASE_TITLE_PATTERN="{soft} {ver} 跨平台静态二进制"
