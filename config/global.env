#!/bin/bash
# 全局通用编译配置 - 所有参数为默认值，软件版本配置可覆盖
# 编码格式
export LANG="en_US.UTF-8"
export LC_ALL="en_US.UTF-8"

# 架构配置（默认x64，可扩展arm64）
export DEFAULT_ARCH="x64"
export SUPPORT_ARCHES="x64 arm64"

# 编译优化（默认O2，平衡速度和体积）
export DEFAULT_OPT="-O2"

# C/C++标准（默认C++11，C默认c99）
export DEFAULT_C_STD="c99"
export DEFAULT_CXX_STD="c++11"

# 源码缓存目录（通用脚本拉取源码的缓存路径，避免重复下载）
export SOURCE_CACHE_DIR="$PWD/source_cache"



#!/bin/bash
# 确保获取的是项目根目录的绝对路径
export BASE_DIR=$(pwd)
export SOURCE_DIR="${BASE_DIR}/sources"
export BUILD_DIR="${BASE_DIR}/build"
export INSTALL_PREFIX="${BASE_DIR}/dist"
export LOG_DIR="${BASE_DIR}/logs"

# 确保基础目录存在
mkdir -p "$SOURCE_DIR" "$BUILD_DIR" "$INSTALL_PREFIX" "$LOG_DIR" "$SOURCE_CACHE_DIR"
