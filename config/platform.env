#!/bin/bash
# 平台专属配置 - 按Linux/Windows/macOS划分，通用脚本自动识别加载
# 注意：Windows平台为MSYS2的MINGW64环境，所有路径为MSYS2兼容路径

# ==================== Linux 配置 ====================
export LINUX_OS_NAME="linux"
# apt源（国内可换阿里云：mirrors.aliyun.com，默认官方）
export LINUX_APT_SOURCE="deb.debian.org"
# apt更新/安装参数（静默安装，无需交互）
export LINUX_APT_OPTS="-y --no-install-recommends"

# ==================== Windows 配置 ====================
export WINDOWS_OS_NAME="windows"
# MSYS2环境（固定MINGW64，64位编译）
export WINDOWS_MSYS2_MSYSTEM="MINGW64"
# MSYS2包管理器参数（静默安装）
export WINDOWS_PACMAN_OPTS="--noconfirm"
# Windows产物后缀
export WINDOWS_EXE_SUFFIX=".exe"

# ==================== macOS 配置 ====================
export MACOS_OS_NAME="macos"
# brew源（国内可换中科大：mirrors.ustc.edu.cn，默认官方）
export MACOS_BREW_SOURCE="brew.sh"
# brew安装参数（静默安装）
export MACOS_BREW_OPTS="-y"
# macOS架构识别（自动区分x64/arm64）
export MACOS_ARCH_CMD="uname -m | sed 's/x86_64/x64/;s/arm64/arm64/'"
